{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="form-container">
        <h1>Create new article</h1>

        {{ form_start(product_form, {'attr': {'class': 'product-form'}}) }}

        <div class="symfony-form-row">
            {{ form_label(product_form.name) }}
            {{ form_widget(product_form.name, {'attr': {'placeholder': 'Enter product name'}}) }}
        </div>

        <div class="symfony-form-row">
            {{ form_label(product_form.description) }}
            {{ form_widget(product_form.description, {'attr': {'placeholder': 'Write your product description'}}) }}
        </div>

        <div class="symfony-form-row">
            {{ form_label(product_form.price) }}
            {{ form_widget(product_form.price, {'attr': {'placeholder': 'Product price'}}) }}
        </div>

        <div class="symfony-form-row">
            {{ form_label(product_form.category) }}
            {{ form_widget(product_form.category, {'attr': {'placeholder': 'Product category'}}) }}
        </div>

        <button type="submit" class="submit-btn">
            Create new product
        </button>

        {{ form_end(product_form) }}
    </div>

    <h1>My products</h1>

    {% for product in products %}
        {{ dump(product) }}

        <div>
            <a href={{ path('app_detail_product', { id: product.id}) }}></a>
            <p>{{ product.createdAt|date("m/d/Y") }}</p>
            <p>{{ product.name }}</p>
            <p>{{ product.description }}</p>
            <p>{{ product.price }}</p>
            <p>{{ product.category }}</p>
        </div>
    {% endfor %}

</div>
{% endblock %}
