<style>
    footer {
        padding: 24px 80px;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        background-color: #f0f0f0;
        border-top: 1px solid #ccc;
        gap: 40px;
    }

    .footer-container {
        width: 100%;
        display: flex;
        justify-content: space-between;
        gap: 40px;
    }

    .footer-viva {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .footer-general-infos {
        display: flex;
        gap: 24px;
    }
    .footer-section {
        width: 200px;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .footer-section h3 {
        color: var(--inkwell);
    }

    .footer-section ul {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .footer-section ul li a {
        color: var(--inkwell);
        text-decoration: none;
        font-size: 0.95rem;
        transition: color 0.3s;
    }

    .footer-section ul li a:hover {
        color: var(--inkwell);
    }

    .footer-logo {
        font-size: 1.6rem;
        font-weight: bold;
        color: var(--inkwell);
    }

    .social-icons {
        display: flex;
        gap: 12px;
    }

    .footer-bottom {
        text-align: center;
        font-size: 16px;
        color: var(--lunar-eclipse);
    }
</style>

<footer>
    <div class="footer-container">
        <div class="footer-viva">
            <div class="footer-logo">VivaMode</div>
            <p>{% trans %}footer.tagline{% endtrans %}</p>
            <div class="social-icons">
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>

        <div class="footer-general-infos">
            <div class="footer-section">
                <h3>{% trans %}footer.about{% endtrans %}</h3>
                <ul>
                    <li><a href="#">{% trans %}footer.our_story{% endtrans %}</a></li>
                    <li><a href="#">{% trans %}footer.team{% endtrans %}</a></li>
                    <li><a href="#">{% trans %}footer.stores{% endtrans %}</a></li>
                    <li><a href="#">{% trans %}footer.careers{% endtrans %}</a></li>
                </ul>
            </div>

            <div class="footer-section">
                <h3>{% trans %}footer.help{% endtrans %}</h3>
                <ul>
                    <li><a href="#">{% trans %}footer.customer_service{% endtrans %}</a></li>
                    <li><a href="#">{% trans %}footer.returns{% endtrans %}</a></li>
                    <li><a href="#">{% trans %}footer.order_tracking{% endtrans %}</a></li>
                    <li><a href="#">{% trans %}footer.faq{% endtrans %}</a></li>
                </ul>
            </div>

            <div class="footer-section">
                <h3>{% trans %}footer.legal_info{% endtrans %}</h3>
                <ul>
                    <li><a href="#">{% trans %}footer.terms_and_conditions{% endtrans %}</a></li>
                    <li><a href="#">{% trans %}footer.privacy_policy{% endtrans %}</a></li>
                    <li><a href="#">{% trans %}footer.cookies{% endtrans %}</a></li>
                    <li><a href="#">{% trans %}footer.legal_notice{% endtrans %}</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        Â© {{ "now"|date("Y") }} VivaStyle. {% trans %}footer.copyright{% endtrans %}
    </div>
</footer>
