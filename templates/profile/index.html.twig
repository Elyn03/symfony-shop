{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ profile.lastName }} {{ profile.firstName }}! ðŸ˜Ž</h1>

    {{ dump(profile) }}
    {{ form_start(profileForm, {'attr': {'class': 'product-form'}}) }}
    <div class="symfony-form-row">
        <label for="">email</label>
        {{ profile.email }}
    </div>

    <div class="symfony-form-row">
        {{ form_label(profileForm.lastName) }}
        {{ form_widget(profileForm.lastName, {'attr': {'placeholder': profile.lastName}}) }}
    </div>

    <div class="symfony-form-row">
        {{ form_label(profileForm.firstName) }}
        {{ form_widget(profileForm.firstName, {'attr': {'placeholder': profile.firstName}}) }}
    </div>


    <button type="submit" class="submit-btn">
        Save
    </button>
    {{ form_end(profileForm) }}

</div>
{% endblock %}
