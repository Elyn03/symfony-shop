{% extends 'base.html.twig' %}

{% block title %}Your Profile{% endblock %}

{% block stylesheets %}
    <style>
        .profile-container {
            padding-top: 24px;
            display: flex;
            gap: 80px;
        }

        .profile-container img {
            height: 500px;
            aspect-ratio: 1 / 1;
            border-radius: 12px;
        }

        .profile-container form {
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .form-group input:focus {
            border-color: #9a8c98;
            outline: none;
        }

        .static-field {
            background: var(--au-lait);
            padding: 0.6rem 1rem;
            border-radius: 8px;
            font-size: 0.95rem;
            color: var(--inkwell);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="content">
        <h1>{% trans %}welcome{% endtrans %} {{ profile.firstName }} {{ profile.lastName }} âœ¨</h1>

        <div class="profile-container">
            <img src="{{ asset("images/user.jpg") }}" alt="">

            {{ form_start(profileForm) }}

            <div class="form-row">
                {{ form_label(profileForm.lastName) }}
                {{ form_widget(profileForm.lastName) }}
            </div>

            <div class="form-row">
                {{ form_label(profileForm.firstName) }}
                {{ form_widget(profileForm.firstName) }}
            </div>

            <div class="form-row">
                <label>{% trans %}form.email{% endtrans %}</label>
                <div class="static-field">{{ profile.email }}</div>
            </div>

            <div class="form-row">
                <label>{% trans %}form.points{% endtrans %}</label>
                <div class="static-field">{{ profile.points }}</div>
            </div>

            <div class="form-row">
                <label>{% trans %}form.account{% endtrans %}</label>
                <div class="static-field">{{ profile.isActive ? ('form.active'|trans) : ('form.disabled'|trans) }}</div>
            </div>

            <button type="submit" class="btn">{% trans %}form.save_btn{% endtrans %}</button>

            {{ form_end(profileForm) }}
        </div>
    </div>
{% endblock %}
